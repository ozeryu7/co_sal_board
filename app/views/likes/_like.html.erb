<% if current_user.liked_by?(post.id) %>
  <%= link_to post_like_path(post.id), class:'like-link', method: :delete, remote: true do %>
    <div class="fa fa-heart unlike-btn"></div>
  <% end %>
    <%= post.likes.count %>
<% else %>
  <%= link_to post_likes_path(post.id), class:'like-link', method: :post, remote: true do %>
    <div class="fa fa-heart like-btn"></div>
  <% end %>
    <%= post.likes.count %>
<% end %>