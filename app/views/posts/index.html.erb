<h1>投稿一覧</h1>
  <%# <div id="breadcrumbs" ></div>
    <%= render partial: "layouts/breadcrumbs" %>
     <% if user_signed_in? %>
       <%= search_form_for @search, url: posts_path do |f| %>
         キーワード検索<br>
         <%= f.search_field :title_or_content_cont, class: 'form-control' %>
         <%= f.submit '検索', class: "btn btn-primary" %>
         <% end %>
        <% @results.each do |post| %>
          <div class="post">
              <p><%= post.date %></p>
              <p><%= post.title %></p>
              <p><%= simple_format(post.content) %></p>
              <p><%= post.shoes_color %></p>
              <p><%= post.shirts_color %></p>
          <% if post.images.attached? %>
            <% post.images.each do |image| %>
              <p><%= image_tag image.variant(resize_to_limit: [300, 300]) %></p>
            <% end %>
          <% end %>
                <div id="post_<%= post.id %>">  
                  <%= render partial: 'likes/like', locals: { post: post } %>
                </div>
              <p><%= link_to "詳細", post %></p>
            <% if user_signed_in? && current_user.id == post.user_id %>
              <p><%= link_to "編集", edit_post_path(post.id) %></p>
              <p><%= link_to "削除", post, method: :delete, data: { confirm: '本当に削除していいですか?', cancel: 'やめる', commit: '削除する'}, title: '削除確認' %></p>
            <% end %>
          </div>
          <div class="post-user"> <%= link_to post.user.name, user_path(post.user) %></div>
            <div class="col-md-6">
             <div class="dish-created-at">
              <span aria-hidden="true"><%= time_ago_in_words(post.created_at) %>前に投稿</span>
             </div>
            </div>
                   <hr class="my-4">
        <% end %>
     <% else %>
        <p>ログインしてください</p>
     <% end %>
    <%= paginate @results %>