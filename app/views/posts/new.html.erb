<h1>投稿情報を入力</h1>
<%= form_with model: @post, local: true do |form| %>
  <p><%= form.label :title, "タイトル" %> <%= form.text_field :title %></p>
  <p><%= form.label :content, "内容" %> <%= form.text_field :content %></p>
  <p><%= form.label :image, "画像" %> <%= form.file_field :image %></p>
  <%= form.submit "送信" %>
<% end %>