<h2>プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

        <div class="gravatar_edit">
          <%= gravatar_for(@user, size: 40) %>
          <%= @user.name %>
        </div>

         <div class='form-group'>
          <%= f.label :name %><span class="input-need">※必須</span><br />
          <%= f.text_field :name, class: 'form-control', id: 'user_name' %>
        </div>

        <div class = 'form-group'>
          <%= f.label :email %><span class="input-need">※必須</span><br />
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>

        <div class = 'form-group'>
          <%= f.label :introduction %><span class="input-unneed">※任意</span><br />
          <%= f.text_area :introduction, size: "60x4", class: 'form-control', id: 'user_introduction' %>
        </div>

        <div class = 'form-group'>
          <%= f.label :sex %><span class="input-unneed">※任意</span>
          <%= f.text_field :sex, class: 'form-control', id: 'user_sex' %>
        </div>

  <br />
    <%= f.submit "更新", class: "btn btn-primary" %>
<% end %><br />

<h5>アカウントを削除する</h5>

<p><%= button_to "アカウント削除", registration_path(resource_name), class: "btn btn-secondary", data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "ホーム", :back %>
