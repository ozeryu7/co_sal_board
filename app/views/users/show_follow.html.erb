<div class="container">
<% provide(:title, @title) %>
<div id="fh5co-portfolio">
  <div class="container">
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
        <% if @user.avatar.attached? %>
            <p><%= image_tag @user.avatar.variant(combine_options:{gravity: :center, resize:"200x200^", crop:"200x200+0+0"}).processed %></p>
        <% end %>
          <h2><%= @user.name %></h2>
          <span><%= link_to "プロフィール", @user %></span>
          <span><b>投稿</b><%= @user.posts.count %><b>件</b></span>
        </section>
        <section class="stats">
          <%= render 'devise/shared/stats' %>
          <% if @users.any? %>
            <div class="user_avatars">
              <% @users.each do |user| %>
                <%= link_to gravatar_for(user, size: 30), user %>
              <% end %>
            </div>
          <% end %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3><%#= @title %></h3>
        <% if @users.any? %>
          <ul class="users follow">
            <%#= render @users %>
          </ul>
          <%#= will_paginate %>
          <!-- 部分テンプレートにしなくてもいい、何したいかはっきりさせる-->
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>